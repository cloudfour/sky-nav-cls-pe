---
import Head from '../components/Head.astro';
import SkyNav from '../components/SkyNav.astro';
import Layout from './Layout.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<Head title={title} />
	<!-- @todo Is data-demo needed anymore? Probably not. -->
	<body class="o-page" data-demo="synchronous-inline-script">
		<SkyNav />
		<main id="main" class="o-page__content">
			<div class="o-container o-container--pad">
				<div class="o-container__content o-rhythm">
					<slot />
					<p>
						<a href="/" class="c-button">
							<span class="c-button__extra">
								<svg
									width="24"
									height="24"
									viewBox="0 0 24 24"
									aria-hidden="true"
									class="c-icon"
								>
									<path
										fill="none"
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="3"
										d="M9 19l-7-7 7-7"></path>
									<path
										fill="none"
										stroke-linecap="round"
										stroke-width="3"
										d="M4 12h18"></path>
								</svg>
							</span>
							<span class="c-button__content">Go back to the demos list</span>
						</a>
					</p>
				</div>
			</div>
		</main>
		<!-- @todo Figure out the JS -->
		<script type="module" src="/src/synchronous-inline-script.ts">

		</script>
	</body>
</html>
